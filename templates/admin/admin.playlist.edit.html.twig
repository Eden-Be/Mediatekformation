{% extends 'baseadmin.html.twig' %}

{% block title %}Modifier une playlist{% endblock %}

{% block body %}
    <div class="container-fluid px-4">
        <h1 class="mt-4">Modifier une playlist</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="{{ path('admin.playlists') }}">Playlists</a></li>
            <li class="breadcrumb-item active">Modifier</li>
        </ol>

        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-edit me-1"></i>
                Modifier la playlist
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.name) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="mb-3">
    <label class="form-label">Formations rattachées</label>
    {% if playlist.formations is not empty %}
        <ul class="list-group">
            {% for formation in playlist.formations %}
                <li class="list-group-item">{{ formation.title }}</li>
            {% endfor %}
        </ul>
    {% else %}
        <p><em>Aucune formation rattachée à cette playlist.</em></p>
    {% endif %}
</div>


                <div class="d-flex justify-content-between">
                    <a href="{{ path('admin.playlists') }}" class="btn btn-secondary">Retour à la liste</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Enregistrer
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}